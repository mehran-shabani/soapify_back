    {
      "name": "Encounters",
      "item": [
        {
          "name": "List Encounters",
          "request": {
            "method": "GET",
            "header": [],
            "url": {
              "raw": "{{base_url}}/api/encounters/?page=1&page_size=20&status=completed",
              "host": ["{{base_url}}"],
              "path": ["api", "encounters", ""],
              "query": [
                {
                  "key": "page",
                  "value": "1"
                },
                {
                  "key": "page_size",
                  "value": "20"
                },
                {
                  "key": "status",
                  "value": "completed"
                }
              ]
            }
          }
        },
        {
          "name": "Create Encounter",
          "event": [
            {
              "listen": "test",
              "script": {
                "exec": [
                  "pm.test(\"Status code is 201\", function () {",
                  "    pm.response.to.have.status(201);",
                  "});",
                  "",
                  "const response = pm.response.json();",
                  "pm.collectionVariables.set(\"encounter_id\", response.data.id);"
                ],
                "type": "text/javascript"
              }
            }
          ],
          "request": {
            "method": "POST",
            "header": [],
            "body": {
              "mode": "formdata",
              "formdata": [
                {
                  "key": "patient_name",
                  "value": "John Doe",
                  "type": "text"
                },
                {
                  "key": "patient_age",
                  "value": "45",
                  "type": "text"
                },
                {
                  "key": "patient_gender",
                  "value": "male",
                  "type": "text"
                },
                {
                  "key": "chief_complaint",
                  "value": "Persistent headache",
                  "type": "text"
                },
                {
                  "key": "audio_file",
                  "type": "file",
                  "src": "/path/to/audio.m4a"
                }
              ]
            },
            "url": {
              "raw": "{{base_url}}/api/encounters/",
              "host": ["{{base_url}}"],
              "path": ["api", "encounters", ""]
            }
          }
        },
        {
          "name": "Get Encounter Details",
          "request": {
            "method": "GET",
            "header": [],
            "url": {
              "raw": "{{base_url}}/api/encounters/{{encounter_id}}/",
              "host": ["{{base_url}}"],
              "path": ["api", "encounters", "{{encounter_id}}", ""]
            }
          }
        },
        {
          "name": "Get Processing Status",
          "request": {
            "method": "GET",
            "header": [],
            "url": {
              "raw": "{{base_url}}/api/encounters/{{encounter_id}}/status/",
              "host": ["{{base_url}}"],
              "path": ["api", "encounters", "{{encounter_id}}", "status", ""]
            }
          }
        }
      ]
    },
