          "request": {
            "method": "POST",
            "header": [],
            "body": {
              "mode": "raw",
              "raw": "{\n    \"format\": \"pdf\",\n    \"include_transcript\": false,\n    \"language\": \"fa\",\n    \"template\": \"standard\"\n}",
              "options": {
                "raw": {
                  "language": "json"
                }
              }
            },
            "url": {
              "raw": "{{base_url}}/api/outputs/export/{{encounter_id}}/",
              "host": ["{{base_url}}"],
              "path": ["api", "outputs", "export", "{{encounter_id}}", ""]
            }
          }
        }
      ]
