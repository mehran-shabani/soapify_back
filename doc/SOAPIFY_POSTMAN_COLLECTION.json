              "raw": "{{base_url}}/api/accounts/me/",
              "host": ["{{base_url}}"],
              "path": ["api", "accounts", "me", ""]
            }
          }
        },
        {
          "name": "Update Profile",
          "request": {
            "method": "PATCH",
            "header": [],
            "body": {
              "mode": "raw",
              "raw": "{\n    \"email\": \"doctor@example.com\",\n    \"profile\": {\n        \"full_name\": \"Dr. John Smith\",\n        \"bio\": \"Experienced physician\"\n    }\n}",
              "options": {
                "raw": {
                  "language": "json"
                }
